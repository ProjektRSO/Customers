            <artifactId>log4j-core</artifactId>
            <version>2.13.3</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>

    <build>
      <plugins>
          <plugin>
              <groupId>com.kumuluz.ee</groupId>
              <artifactId>kumuluzee-maven-plugin</artifactId>
              <version>${kumuluzee.version}</version>
              <executions>
                  <execution>
                      <id>package</id>
                      <goals>
                          <goal>repackage</goal>
                      </goals>
                  </execution>
              </executions>
          </plugin>
      </plugins>
